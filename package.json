{
  "name": "@sandervandriel/dir-size",
  "version": "1.2.0",
  "description": "Calculates size of a directory and its contents",
  "main": "dist/index.js",
  "bin": {
    "dir-size": "dist/bin/dir-size.js"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/svandriel/dir-size.git"
  },
  "keywords": [
    "directory",
    "folder",
    "size",
    "space",
    "usage",
    "stat",
    "du",
    "disk",
    "usage"
  ],
  "author": "Sander van Driel",
  "license": "ISC",
  "dependencies": {
    "chalk": "^4.1.0",
    "commander": "^7.2.0",
    "fs-extra": "^9.1.0",
    "ora": "^5.4.0",
    "p-limit": "^3.1.0",
    "pretty-bytes": "^5.1.0",
    "ramda": "^0.26.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.9",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.37",
    "@types/ora": "^3.2.0",
    "@types/pretty-bytes": "^5.1.0",
    "@types/ramda": "^0.26.5",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist coverage",
    "dev": "nodemon -d 0.2 src/index.ts",
    "fix": "eslint \"**/*.ts\" --fix",
    "lint": "eslint \"**/*.ts\"",
    "prepublishOnly": "npm run verify",
    "start": "node dist/index.js",
    "test": "jest",
    "verify": "npm run test && npm run lint && npm run clean && npm run build",
    "version": "npm run verify",
    "watch": "tsc -w"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run verify"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix"
    ],
    "**/*.json": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": "^10||^12||^14"
  }
}
